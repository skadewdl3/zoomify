.landing
  width 100vw
  padding-top NAVBAR_HEIGHT
  height 100vh
  background linear-gradient(to right bottom, #45aaf2, #3867d6)
  display flex
  justify-content center
  align-items center

  &__meetings
    background #fff
    width 70vw
    height 80vh
    border-radius 1rem
    overflow-x hidden
    overflow-y auto

    &__controls
      background #eee
      width 100%
      height 5rem
      display flex
      align-items center
      justify-content space-between
      padding 0

    &__filters
      display flex
      background #eee
      cursor pointer